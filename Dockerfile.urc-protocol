FROM node:22

WORKDIR /app

# Copy urc tree, then replace the submodule .git file with urcâ€™s real git dir
COPY urc /app/urc
COPY .git/modules/urc /app/urc/.git

WORKDIR /app/urc

RUN apt-get update && apt-get install -y jq

RUN curl -L https://foundry.paradigm.xyz | bash && \
    . ~/.bashrc && \
    foundryup && \
    forge install

RUN find /app/urc/script -type f -name "*.sh" -exec chmod +x {} \;

ENV PATH="/root/.foundry/bin:$PATH"

CMD ["sh", "-c", "echo Please verify the environment variables and command."]